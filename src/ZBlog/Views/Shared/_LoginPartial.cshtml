@if (Html.IsAdmin())
{
    <li class="am-dropdown" data-am-dropdown>
        <a class="am-dropdown-toggle" data-am-dropdown-toggle href="javascript:;">
            Menu <span class="am-icon-caret-down"></span>
        </a>
        <ul class="am-dropdown-content">
            <li class="am-dropdown-header">Manage Post</li>
            <li><a asp-controller="Post" asp-action="Index">Post List</a></li>
            <li><a asp-controller="Post" asp-action="New">New Post</a></li>
            <li class="am-dropdown-header">Manage Profile</li>
            <li><a asp-controller="Admin" asp-action="ChangePassword">Change Password</a></li>
            <li><a asp-controller="Admin" asp-action="LogOff">Log off</a></li>
        </ul>
    </li>
}
else
{
    <li><a asp-controller="Admin" asp-action="Login">Login</a></li>
}