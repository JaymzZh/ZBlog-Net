@model LoginViewModel

@{
    ViewData["Title"] = "Log in";
}

<section>
    <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
        <fieldset>
            <legend>@ViewData["Title"]</legend>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="am-form-group">
                <label asp-for="Email" class="col-md-2 am-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="Email" class="am-form-field"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="am-form-group">
                <label asp-for="Password" class="col-md-2 am-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="Password" class="am-form-field"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="am-form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="checkbox">
                        <input asp-for="RememberMe"/>
                        <label asp-for="RememberMe"></label>
                    </div>
                </div>
            </div>
            <div class="am-form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="am-btn am-btn-primary">Log in</button>
                </div>
            </div>
        </fieldset>
    </form>
</section>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
